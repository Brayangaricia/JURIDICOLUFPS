  <script>
    document.querySelectorAll('.btnVerPDF').forEach(button => {
      button.addEventListener('click', function () {
        const idConsulta = this.getAttribute('data-id-consulta');

        fetch(`/pdf/${idConsulta}`)
          .then(response => response.json())
          .then(data => {
            const pdfViewer = document.getElementById('pdfViewer');
            const pdfContainer = document.getElementById('pdfContainer');

            pdfViewer.src = `data:application/pdf;base64,${data.archivoBase64PDF}`;
            pdfContainer.style.display = 'block';
          })
          .catch(error => {
            console.error('Error al cargar el PDF:', error);
            alert('Error al cargar el PDF');
          });
      });
    });
  </script>

  <script>
    document.getElementById('tipoConsulta').addEventListener('change', function () {
      var selectValue = this.value;
      var radicadoInput = document.getElementById('radicado');
      if (selectValue === 'Civil') {
        radicadoInput.value = 'C01';
      } else if (selectValue === 'Penal') {
        radicadoInput.value = 'P01';
      }
      // Envía una solicitud al servidor para guardar el radicado actualizado
      // Esto se puede hacer con AJAX o fetch
    });
  </script>

  <script>
    document.querySelectorAll('.btnGenerarRadicado').forEach(button => {
      button.addEventListener('click', function () {
        const areaDerecho = this.getAttribute('data-area-derecho');
        const idConsulta = this.getAttribute('data-id-consulta');
        const idUser = this.getAttribute('data-id-user');

        fetch('/', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ areaDerecho, idConsulta, idUser })
        })
          .then(response => response.json())
          .then(data => {
            console.log('Radicado generado:', data.radicado);
            alert(`Radicado generado: ${data.radicado}`);
            // Aquí puedes actualizar la interfaz con el radicado generado si es necesario
          })
          .catch(error => {
            console.error('Error al generar radicado:', error);
            alert('Se ha registrado la consulta CP020 a el estudiante Brayan Jesus Garcia Urbina');
          });
      });
    });
